# Configuración para desarrollo local
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1
SECRET_KEY=change-me-in-production

# Base de datos (opción preferida: URL única - Neon)
# Ejemplo Neon pooled: postgres://USER:PASS@ep-xxxx-pooler.region.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=

# Base de datos (opción alternativa: variables separadas)
DB_NAME=smartsale_db
DB_USER=postgres
DB_PASSWORD=tu_password
DB_HOST=localhost
DB_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=tu_clave_secreta_jwt
